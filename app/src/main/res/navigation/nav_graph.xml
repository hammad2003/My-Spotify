        <!-- Agrega cualquier argumento necesario para el fragmento de inicio -->

        <action
            android:id="@+id/action_loginFragment_to_bottomFragmentInicio2"
            app:destination="@id/bottomFragmentInicio" />
    </fragment>

    <fragment
